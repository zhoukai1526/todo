<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.3"></RelativeLayout>

    <LinearLayout

        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pop_window_shape">

        <com.iwintrue.commonlibrary.ui.TextViewPlus
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/share"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="10dp"
            android:text="分享"/>


        <com.iwintrue.commonlibrary.ui.TextViewPlus
            android:id="@+id/tv_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/reward"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="10dp"
            android:text="打赏"/>
        <com.iwintrue.commonlibrary.ui.TextViewPlus
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/code"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="10dp"
            android:text="二维码"/>

    </LinearLayout>

</RelativeLayout>