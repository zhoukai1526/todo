<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_span_aty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iwintrue.todoapplication.SpanAty">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/ed_text"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <Button
                android:id="@id/btn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button"
                android:onClick="click"/>
            <com.iwintrue.commonlibrary.ui.RoundImageView
                android:id="@+id/iv_round"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/background"
                app:border_inside_color="#f00"
                app:border_outside_color="#0f0"
                app:border_thickness="1dp"
                app:type = "circle"/>

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_icon3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

            <com.iwintrue.commonlibrary.ui.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:left_height="60dp"
                app:left_width="60dp"
                android:drawableLeft="@drawable/logo"/>
            <ImageView
                android:id="@+id/iv_icon4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/iv_icon5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>


            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="100dp"></WebView>


        </LinearLayout>

    </ScrollView>



</LinearLayout>
